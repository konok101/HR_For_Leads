@model List<leads_hr_ltd.Models.Employee>

@{
    ViewData["Title"] = "HR Data List";
}

<h2>HR Data List</h2>

<table class="table table-bordered" id="employeeTable">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Division</th>
            <th>Building</th>
            <th>Title</th>
            <th>Room</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeID</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Division</td>
                    <td>@employee.Building</td>
                    <td>@employee.Title</td>
                    <td>@employee.Room</td>
                    <td>
                        <!-- Edit Icon -->
                        <a href="@Url.Action("EditEmployee", "HR", new { employeeId = employee.EmployeeID })" title="Edit">
                            <i class="fas fa-edit"></i>
                        </a>
                        &nbsp;
                        <!-- Delete Icon -->
                        <a href="javascript:void(0);" onclick="deleteEmployee(@employee.EmployeeID)" title="Delete">
                            <i class="fas fa-trash text-danger"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No employees found.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Delete employee function
            window.deleteEmployee = function (employeeId) {
                if (confirm('Are you sure you want to delete this employee?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteEmployee", "HR")',
                        type: 'POST',
                        data: { employeeId: employeeId },
                        success: function (response) {
                            if (response.success) {
                                alert('Employee deleted successfully.');
                                location.reload(); // Reload the page to reflect the changes
                            } else {
                                alert('Error deleting employee.');
                            }
                        },
                        error: function () {
                            alert('An error occurred while deleting the employee.');
                        }
                    });
                }
            };
        });
    </script>
}

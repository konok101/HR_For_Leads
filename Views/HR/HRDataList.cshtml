@model List<leads_hr_ltd.Models.Employee>

@{
    ViewData["Title"] = "HR Data List";
}

<h2>HR Data List</h2>

<!-- Search Form -->
<form id="searchForm" method="get" asp-action="HRDataList">
    <div class="form-group">
        <label for="EmployeeID">Search by Employee ID:</label>
        <input type="number" class="form-control" id="EmployeeID" name="EmployeeID" placeholder="Enter Employee ID" />
    </div>
</form>

<!-- Table for displaying employee data -->
<div id="employeeTable">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Division</th>
                <th>Building</th>
                <th>Title</th>
                <th>Room</th>
                <th>Actions</th> <!-- New column for actions -->
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeID</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Division</td>
                    <td>@employee.Building</td>
                    <td>@employee.Title</td>
                    <td>@employee.Room</td>
                    <td>
                        <!-- Update Button -->
                        <a href="@Url.Action("UpdateEmployee", "HR", new { employeeId = employee.EmployeeID })" class="btn btn-warning btn-sm">Update</a>

                        <!-- Delete Button (AJAX) -->
                        <button class="btn btn-danger btn-sm" onclick="deleteEmployee(@employee.EmployeeID)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initial load - show all employees
            fetchEmployeeData();

            // Search functionality on typing
            $('#EmployeeID').on('keyup', function () {
                var employeeId = $(this).val();
                fetchEmployeeData(employeeId);
            });

            // Fetch employee data based on search
            function fetchEmployeeData(employeeId = '') {
                $.ajax({
                    url: '@Url.Action("HRDataList", "HR")',
                    type: 'GET',
                    data: { EmployeeID: employeeId }, // Send the search term
                    success: function (data) {
                        $('#employeeTable').html($(data).find('#employeeTable').html()); // Update the table with filtered data
                    },
                    error: function () {
                        alert('An error occurred while searching for employees.');
                    }
                });
            }

            // Delete employee
            window.deleteEmployee = function (employeeId) {
                if (confirm('Are you sure you want to delete this employee?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteEmployee", "HR")',
                        type: 'POST',
                        data: { employeeId: employeeId },
                        success: function (response) {
                            if (response.success) {
                                alert('Employee deleted successfully.');
                                location.reload(); // Reload the page to reflect the changes
                            } else {
                                alert('Error deleting employee.');
                            }
                        },
                        error: function () {
                            alert('An error occurred while deleting the employee.');
                        }
                    });
                }
            };
        });
    </script>
}

@model leads_hr_ltd.Models.Employee

<div class="card">
    <div class="card-header">
        <h2>Edit Employee</h2>
    </div>
    <div class="card-body">
        <form asp-action="UpdateEmployee" method="post">
            <input type="hidden" asp-for="EmployeeID" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Division" class="form-label"></label>
                    <input asp-for="Division" class="form-control" />
                    <span asp-validation-for="Division" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Building" class="form-label"></label>
                    <input asp-for="Building" class="form-control" />
                    <span asp-validation-for="Building" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Room" class="form-label"></label>
                    <input asp-for="Room" class="form-control" />
                    <span asp-validation-for="Room" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary me-2">Save</button>
                <a asp-action="EmployeeList" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
